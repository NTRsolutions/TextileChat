<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/splash_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_thumb_up_white_24dp"/>

        <TextView
            android:id="@+id/go_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:text="Go Get"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/the_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/go_get"
            android:layout_below="@+id/go_get"
            android:layout_marginTop="-20dp"
            android:text="the Product"
            android:paddingStart="5dp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/go_get"
            android:layout_below="@+id/the_chat"
            android:text="Sing up for free to join a wonder full world."
            android:layout_marginTop="-5dp"
            android:paddingStart="5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/go_get"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_stlye"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Sign In"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@id/btn_sign_in"
            android:layout_marginStart="5dp"
            android:background="@drawable/btn_stlye"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


    </RelativeLayout>

</LinearLayout>